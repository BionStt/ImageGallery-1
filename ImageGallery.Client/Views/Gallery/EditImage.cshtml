@model ImageGallery.Client.ViewModels.EditImageViewModel

<div class="container mt-4">

    <h2>Edit Image Title</h2>

    <form asp-action="EditImage" method="post" role="form">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Title">Your image's title</label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Change title" class="btn btn-primary" />
        </div>

    </form>

    <div>
        <a asp-action="Index">Back to Home</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</div>
